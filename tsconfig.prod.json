{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",     // Changed from ESNext for Lambda compatibility
    "lib": ["ES2020"],
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "node",  // Changed from "bundler" for Lambda compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* For build */
    "noEmit": false,
    "outDir": "build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/__fixtures__/*"]
}